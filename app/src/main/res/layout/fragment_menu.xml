<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <FrameLayout
        android:id="@+id/fl_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">



        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:context=".fragments.menuFragment">

            <TextView
                android:id="@+id/textViewMenu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="50dp"
                android:fontFamily="@font/poppins"
                android:text="Menu"
                android:textColor="#B3000000"
                android:textStyle="bold"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:orientation="vertical"
                app:layout_constraintTop_toBottomOf="@id/textViewMenu">

                <LinearLayout
                    android:id="@+id/linearProfile"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="20dp"
                    android:orientation="horizontal"
                    android:padding="20dp"
                    >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/image_background"
                        android:padding="5dp"
                        android:src="@drawable/person"
                        app:tint="#428DFC" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:fontFamily="@font/montserrat_alternates"
                        android:layout_gravity="center_vertical"
                        android:text="Profile" />



                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:layout_alignParentEnd="true"
                            android:layout_width="40dp"
                            android:layout_height="15dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/next"
                            android:layout_centerInParent="true"
                            app:tint="#828282" />

                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearNotifications"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="20dp"
                    android:orientation="horizontal"
                    android:padding="20dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:background="@drawable/image_background"
                        app:tint="#428DFC"
                        android:src="@drawable/notifications" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:fontFamily="@font/montserrat_alternates"
                        android:text="Notifications" />


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:layout_alignParentRight="true"
                            android:layout_width="40dp"
                            android:layout_height="15dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/next"
                            app:tint="#828282" />

                    </RelativeLayout>


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linear_privacy_policy"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="20dp"
                    android:orientation="horizontal"
                    android:padding="20dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:background="@drawable/image_background"
                        app:tint="#428DFC"
                        android:src="@drawable/lock" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:fontFamily="@font/montserrat_alternates"
                        android:text="Privacy Policy" />


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:layout_alignParentRight="true"
                            android:layout_width="40dp"
                            android:layout_height="15dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/next"
                            app:tint="#828282" />

                    </RelativeLayout>


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearShare"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="20dp"
                    android:orientation="horizontal"
                    android:padding="20dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="7dp"
                        android:background="@drawable/image_background"
                        app:tint="#428DFC"
                        android:src="@drawable/ic_baseline_share_24" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:fontFamily="@font/montserrat_alternates"
                        android:text="Share" />


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:layout_alignParentRight="true"
                            android:layout_width="40dp"
                            android:layout_height="15dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/next"
                            app:tint="#828282" />

                    </RelativeLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginBottom="20dp"
                    android:padding="20dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/image_background"
                        android:padding="7dp"
                        android:src="@drawable/rate"
                        app:tint="#428DFC" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:fontFamily="@font/montserrat_alternates"
                        android:text="Rate us" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:layout_alignParentRight="true"
                            android:layout_width="40dp"
                            android:layout_height="15dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/next"
                            app:tint="#828282" />

                    </RelativeLayout>


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearDropFeedback"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginBottom="20dp"
                    android:padding="20dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/image_background"
                        android:padding="7dp"
                        android:src="@drawable/feedback"
                        app:tint="#428DFC" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:fontFamily="@font/montserrat_alternates"
                        android:text="Drop a feedback" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:layout_alignParentRight="true"
                            android:layout_width="40dp"
                            android:layout_height="15dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/next"
                            app:tint="#828282" />

                    </RelativeLayout>


                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:padding="20dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/image_background"
                        android:padding="7dp"
                        android:src="@drawable/ic_baseline_login_24"
                        app:tint="#428DFC" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:fontFamily="@font/montserrat_alternates"
                        android:text="Log out" />


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:layout_alignParentRight="true"
                            android:layout_width="40dp"
                            android:layout_height="15dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/next"
                            app:tint="#828282" />

                    </RelativeLayout>



                </LinearLayout>

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </FrameLayout>


</ScrollView>
