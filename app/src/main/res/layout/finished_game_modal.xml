<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="260dp"
        android:background="@drawable/custom_dialog"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_height="310dp">

        <ImageView
            android:id="@+id/image"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:padding="9dp"
            android:layout_marginTop="60dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/wordsplashlogo"
            android:background="@drawable/circle_border"/>

        <TextView
            android:id="@+id/congrats"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Congratulations"
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true"
            android:textStyle="bold"
            android:layout_below="@id/image"
            android:textColor="@color/fade_black"/>

        <TextView
            android:id="@+id/You"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="You Scored 100!"
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true"
            android:textStyle="bold"
            android:layout_below="@id/congrats"
            android:textColor="@color/fade_black"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content"
            android:layout_below="@id/You">

            <androidx.appcompat.widget.AppCompatButton                android:layout_width="110dp"
                android:layout_marginTop="40dp"
                android:text="Exit"
                android:textColor="@color/main_primary_color"
                android:layout_below="@id/You"
                android:background="@drawable/main_color_border"
                android:layout_marginStart="10dp"
                android:layout_height="48dp"/>

            <com.google.android.material.button.MaterialButton
                android:layout_width="110dp"
                android:layout_height="48dp"
                android:layout_below="@id/You"
                android:layout_alignParentRight="true"
                android:layout_marginTop="40dp"
                android:layout_marginStart="15dp"
                android:background="@drawable/hey"
                android:text="Play again"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="14sp" />

        </LinearLayout>

    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>